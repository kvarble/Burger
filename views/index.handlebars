
<h1>YUMM-O</h1>


<h3>Add a Burger</h3>
<form class="new-form" align="center">
    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="burger">
    </div>
    <button class="submit">Submit</button>
</form>

<h2>Uneaten</h2>
<ul id="left">
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h4>Devoured</h4>
<ul id="right">
    {{#each burgers}}
    {{#if devoured}}
    <li>
    {{this.burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>


