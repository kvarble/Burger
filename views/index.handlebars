<h1>Burgers</h1>
<h2>Uneaten</h2>


<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured</h2>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>


<h3>Add a Burger</h3>
<form class="new-form">
    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="burger">
    </div>
    <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked>Devoured!<br>
        <input type="radio" name="devoured" value="0"> eat me! <br>
    </div>
</form>